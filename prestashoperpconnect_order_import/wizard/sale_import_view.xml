<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        <record model="ir.ui.view" id="order_import_wizard_view">
            <field name="name">order.import.wizard.view</field>
            <field name="model">order.import.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import a specific order from an external system">
                    <field name="order_reference" nolabel="1" colspan='4'/>
                    <footer>
                        <button special="cancel" string="Cancel"/>
                        or
                        <button name="import_order" string="Import Order" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

         <act_window name="Import manuel d'une commande"
            res_model="order.import.wizard"
            src_model="sale.order"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_import_order_wizard"/>

    </data>
</openerp>
